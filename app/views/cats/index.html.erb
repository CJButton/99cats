<h1>Cats</h1>
<%= link_to "Add cat", new_cat_url %> | <%= link_to "Rental Request", new_cat_rental_request_url %>
<br /><br />
<table>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Color</th>
    <th>Sex</th>
    <th>Actions</th>
  </tr>
  <% @cats.each do |cat| %>
    <tr>
      <td><%= cat.name %></td>
      <td><%= cat.age %></td>
      <td><%= cat.color %></td>
      <td><%= cat.sex %></td>
      <td><%= link_to "Show", cat_url(cat.id) %> | <%= link_to "Edit", edit_cat_url(cat.id) %> | <%= link_to "Request Rental", new_cat_rental_request_url(cat_id: cat.id) %></td>
    </tr>
  <% end %>
</table>
